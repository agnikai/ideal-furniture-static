<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Ideal Furniture Outlet" %></title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">

    <header>
      <div class="row">
        <div class="col-xs-12 col-sm-5">
          <% link_to '/' do %>
            <img class="header img-responsive" src="images/ideal-glow-logo.png" />
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-7">
          <h1 class="header">631.393.2777</h1>
          <p class="header">STORE HOURS: Mon - Sat: 10am - 8pm Sun: 11am - 6pm</p>
          <p class="header">75 Broadhollow Rd., Farmingdale, NY 11735</p>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>